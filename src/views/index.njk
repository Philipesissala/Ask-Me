{% extends 'layout.njk' %}
{% block content %}
    <div class="container">
        <hr>
        <h1>Lista de Perguntas</h1>
        <hr>
        <a href="/question" class="btn btn-primary">Perguntar</a>
        <hr>
        {% for question in questions %}
        <br>
            <div class="card">
                <div class="card-body">
                    <h3>{{ question.titulo }}</h3>
                </div>
                <div class="card-footer">
                    <a href="/question/{{question.id}}" class="btn btn-primary">Responder</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}